<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="3dp"
    android:background="@color/black"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:id="@+id/rl_cartList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_cartList"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/d" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cart_Good_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/theOrange"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/cart_Recycle_No"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/theOrange"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/cart_Good_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我是商品名稱"
                    android:textColor="@color/theOrange"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="( "
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/cart_Good_Size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="42"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="號 )"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="NT."
                    android:textColor="@color/theOrange" />

                <TextView
                    android:id="@+id/cart_Good_Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4200"
                    android:textColor="@color/theOrange" />
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/cart_Good_RemoveBT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theOrange"
            android:textColor="@color/black"
            android:text="移除" />

    </LinearLayout>
</android.support.v7.widget.CardView>