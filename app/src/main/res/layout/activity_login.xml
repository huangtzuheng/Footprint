<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#080808"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Foot"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/title_layout"
            android:text="print"
            android:textColor="@color/black"
            android:textSize="36sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="103dp"
        android:layout_height="92dp"
        android:layout_margin="20pt"
        android:scaleType="center"
        android:src="@drawable/logo" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="ID "
        android:textColor="@color/theOrange"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/userID"

        android:textColor="@color/white"
        android:textColorHint="@color/lightGray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/theOrange"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ps"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/lightGray" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/theOrange"
        android:onClick="sendString"
        android:text="@string/lg"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/checkedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:bufferType="normal"
        android:onClick="forgetPS"
        android:text="@string/forgetPS"
        android:textColor="@color/theOrange" />


    <!--android:onClick=""-->

</LinearLayout>
